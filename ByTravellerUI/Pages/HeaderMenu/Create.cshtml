@page
@model ByTravellerUI.Pages.HeaderMenu.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4>Create Main Header Menu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="HeaderMainMenu.Name" class="control-label"></label>
                <input asp-for="HeaderMainMenu.Name" class="form-control" />
                <span asp-validation-for="HeaderMainMenu.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeaderMainMenu.Index" class="control-label"></label>
                <input asp-for="HeaderMainMenu.Index" class="form-control" />
                <span asp-validation-for="HeaderMainMenu.Index" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="HeaderMainMenu.IsActive" /> @Html.DisplayNameFor(model => model.HeaderMainMenu.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-outline-success"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-outline-success" asp-page="Index">Back to Card List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
