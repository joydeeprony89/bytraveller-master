@page
@model ByTravellerUI.Pages.MenuItem.EditModel

@{
    ViewData["Title"] = "Edit";
}
<h4>Edit- Menu Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SubMenuItem.SubMenuItemId" />
            <div class="form-group">
                <label asp-for="SubMenuItem.Name" class="control-label"></label>
                <input asp-for="SubMenuItem.Name" class="form-control" />
                <span asp-validation-for="SubMenuItem.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SubMenuItem.HeaderSubMenuId" class="control-label"></label>
                <select asp-for="SubMenuItem.HeaderSubMenuId" class="form-control" asp-items="ViewBag.HeaderSubMenuId"></select>
                <span asp-validation-for="SubMenuItem.HeaderSubMenuId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-success" />
                <a class="btn btn-outline-success" asp-page="./Index">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
